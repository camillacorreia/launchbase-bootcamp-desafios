{% extends "layout.njk" %}

{% block head %}
<title>Rocketseat | Cursos</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock head %}

{% block content %}

    <div class="content">

        <div class="cards">

        <div class="card starter" data-id="starter">
            <span class="starter-number">01</span>
        
            <img src="https://skylab.rocketseat.com.br/static/media/Starter.64c237cc.svg" 
            alt="Starter">
        
            <p>
            <strong class="starter">Torne-se um programador desejado</strong> no mercado com
            esses cursos gratuitos
            </p>
        </div>
    
        <div class="card launchbase" data-id="launchbase">
            <span class="launchbase-number">02</span>

            <img src="https://skylab.rocketseat.com.br/static/media/LaunchBase.08285320.svg" 
            alt="LaunchBase">
        
            <p>
            <strong class="launchbase">Domine programação do zero</strong> e tenha acesso às melhores
            oportunidades do mercado
            </p>
        </div>
    
        <div class="card gostack" data-id="gostack">
            <span class="gostack-number">03</span>

            <img src="https://skylab.rocketseat.com.br/static/media/GoStack.83a178a0.svg" alt="GoStack">
        
            <p>
            <strong class="gostack">Treinamento imersivo</strong> nas tecnologias mais modernas de
            desenvolvimento web e mobile
            </p>
        </div>

        </div>

    </div>

    <div class="modal-overlay">
        <div class="modal">
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>

        <a class="maximize-modal">
            <i class="material-icons">open_in_full</i>
        </a>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
        </div>
    </div>

    <script src="/scripts.js"></script>
{% endblock content %}